@model Entity.Models.Dtos.PerformanceInfos.StudentPerformanceDto
@{
    ViewData["Title"] = "Edit";
}

<a href="##" onClick="history.go(-1); return false;" class="btn btn-primary"> Back</a> 

<div class="container">
    <h2>Edit student performance</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditSubject" asp-controller="Subject">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Module1Result" class="control-label">Module 1 test</label>
                    <input asp-for="Module1Result" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Module2Result" class="control-label">Module 2 test</label>
                    <input asp-for="Module2Result" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ExamResult" class="control-label">Exam</label>
                    <input asp-for="ExamResult" class="form-control" />
                </div>
                <div>
                    <table>
                        @for (var i = 0; i < Model.EditableHomeworks.Count(); i++)
                        {
                            <div class="form-group">
                                <label asp-for="EditableHomeworks[i].Points" class="control-label">Homework№ @Model.EditableHomeworks[i].HomeworkNumber</label>
                                <input asp-for="EditableHomeworks[i].Points" class="form-control" />
                            </div>
                        }
                    </table>
                </div>
                
                @for (var i = 0; i < Model.EditableHomeworks.Count; i++ )    
                {
                   @Html.HiddenFor(g => g.EditableHomeworks[i].HomeworkId )
                   @Html.HiddenFor(g => g.EditableHomeworks[i].HomeworkResultId )
                }
                @Html.HiddenFor(g=>g.StudentName)
                @Html.HiddenFor(g=>g.SubjectId)
                @Html.HiddenFor(g=>g.StudentSecondName)
                @Html.HiddenFor(g=>g.StudentId)
                @Html.HiddenFor(g=>g.TotalPoints)
                @Html.HiddenFor(g=>g.Homeworks)
                
                <input type="submit" class="form-control" value="Submit"/>
            </form>
            
        </div>
    </div>
</div>

