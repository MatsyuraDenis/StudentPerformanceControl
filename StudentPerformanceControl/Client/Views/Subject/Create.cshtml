@model Entity.Models.Dtos.Subject.NewSubjectDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<a href="##" onClick="history.go(-1); return false;" class="btn btn-primary"> Back</a> 

<div class="container">
    <h2>Create subject</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Subject">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SubjectInfoId" class="control-label"></label>
                    <select asp-for="SubjectInfoId" asp-items="ViewBag.Subjects" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Module1MaxPoints" class="control-label">Module 1 max points</label>
                    <input asp-for="Module1MaxPoints" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Module2MaxPoints" class="control-label">Module 2 max points</label>
                    <input asp-for="Module2MaxPoints" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ExamMaxPoints" class="control-label">Exam</label>
                    <input asp-for="ExamMaxPoints" class="form-control" />
                </div>
                @Html.HiddenFor(subject => subject.SubjectInfoId)
                @Html.HiddenFor(subject => subject.GroupId)
                <input type="submit" class="btn btn-primary" value="Submit"/>
            </form>
            
        </div>
    </div>
</div>
