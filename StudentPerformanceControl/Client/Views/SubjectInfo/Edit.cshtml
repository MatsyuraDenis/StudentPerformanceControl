@model Entity.Models.Dtos.Subject.SubjectInfoDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2>Create subject</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Subject">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <select asp-for="Title" asp-items="ViewBag.Subjects" class="form-control"></select>
                </div>
                @Html.HiddenFor(subject => subject.Id);
                <input type="submit" class="btn btn-primary" value="Submit"/>
            </form>
            
        </div>
    </div>
</div>
