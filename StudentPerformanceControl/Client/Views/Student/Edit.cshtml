@model Entity.Models.Dtos.StudentDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2>Edit student</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="Student">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondName" class="control-label">SecondName</label>
                    <input asp-for="SecondName" class="form-control" />
                    <span asp-validation-for="SecondName"></span>
                </div>
                @Html.HiddenFor(student => student.GroupId)
                @Html.HiddenFor(student => student.Id)
                <div>
                    <input type="submit" class="btn btn-primary btn-sm" value="Submit"/>
                    <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger btn-sm"> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
