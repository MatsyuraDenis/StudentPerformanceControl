@model Entity.Models.Dtos.StudentDto
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Add student</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Student">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SecondName" class="control-label">SecondName</label>
                    <input asp-for="SecondName" class="form-control" />
                </div>
                @Html.HiddenFor(student => student.GroupId)
                <div>
                    <input type="submit" class="btn btn-primary btn-sm" value="Submit"/>
                    <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger btn-sm"> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

