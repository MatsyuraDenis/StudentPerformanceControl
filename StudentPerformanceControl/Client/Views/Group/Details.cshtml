@using Entity.Models.Enums
@model Entity.Models.Dtos.GroupDto
@{
    ViewData["Title"] = "Details";
    var studentIndex = 1;
    var subjectIndex = 1;
}

<h1 class="align-content-center m-1">@Model.Title group</h1>

@if (Model.Type == (int) GroupTypes.Active)
{
    <a asp-action="Update" asp-controller="Group" asp-route-groupId="@Model.Id" class="btn btn-sm btn-primary">Boost</a>
}

<a href="##" onClick="history.go(-1); return false;" class="btn btn-sm btn-danger"> Back</a> 

<div class="m-1">
     <h3 class="m-1"> Subject </h3>
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Number</th>
                <th>Title</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model.Subjects)
                {
                    <tr>
                        <td>@subjectIndex</td>
                        <td>@subject.SubjectName</td>
                        <td><a asp-action="Details" asp-controller="Subject" asp-route-id="@subject.Id">Details</a></td>
                    </tr>
                    subjectIndex++;
                }
            </tbody>
        </table>
</div>

<div>
    <h3 class="m-1"> Students </h3>
    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Number</th>
            <th>SecondName</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@studentIndex</td>
                    <td>@student.SecondName</td>
                    <td>@student.Name</td>
                </tr>
                studentIndex++;
            }
        </tbody>
    </table>
</div>


