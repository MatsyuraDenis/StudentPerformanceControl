@using Entity.Models.Enums
@model IList<Entity.Models.Dtos.GroupDto>

@{
    ViewData["Title"] = "Index";
    var index = 1;
}

<div class="container">
    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Number</th>
            <th>Group</th>
            <th>Details</th>
            <th>Dectivate</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td> @index </td>
                <td> @group.Title </td>
                <td><a asp-controller="Group" asp-action="Details" asp-route-id="@group.Id">Details</a></td>
                <td>
                    <a asp-action="Deactivate" asp-controller="Group" asp-route-id="@group.Id">Deactivate</a>
                </td>
            </tr>
            index++;
        }
        </tbody>
    </table>
    <a asp-controller="Group" asp-action="Create" class="btn btn-primary">Create new group</a>
</div>

