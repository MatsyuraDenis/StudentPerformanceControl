@model Entity.Models.Dtos.Homeworks.NewHomeworkDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2>@Model.DataDto.GroupName, @Model.DataDto.SubjectName, new homework</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Homework">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="HomeworkTitle" class="control-label">Title</label>
                    <input asp-for="HomeworkTitle" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MaxPoints" class="control-label">Max points</label>
                    <input asp-for="MaxPoints" class="form-control" />
                </div>
                @Html.HiddenFor(group => group.HomeworkNumber)
                @Html.HiddenFor(group => group.SubjectId)
                @Html.HiddenFor(group => group.GroupId)
                <div>
                    <input type="submit" class="btn btn-primary" value="Submit"/> 
                    <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger"> Cancel</a> 
                </div>
            </form>
        </div>
    </div>
</div>
