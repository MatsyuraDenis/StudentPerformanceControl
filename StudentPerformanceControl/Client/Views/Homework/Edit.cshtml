@model Entity.Models.Dtos.Homeworks.HomeworkDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2>@Model.SubjectName</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditHomework" asp-controller="Homework">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="HomeworkTitle" class="control-label">Title</label>
                    <input asp-for="HomeworkTitle" class="form-control" />
                    <span asp-validation-for="HomeworkTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxPoints" class="control-label">Max points</label>
                    <input asp-for="MaxPoints" class="form-control" />
                    <span asp-validation-for="MaxPoints"></span>
                </div>
                @Html.HiddenFor(homework => homework.HomeworkId)
                @Html.HiddenFor(homework => homework.GroupId)
                @Html.HiddenFor(homework => homework.SubjectId)
                @Html.HiddenFor(homework => homework.Number)
                <div>
                    <input type="submit" class="btn btn-sm btn-primary" value="Submit"/> 
                    <a href="##" onClick="history.go(-1); return false;" class="btn btn-sm btn-danger"> Cancel</a> 
                </div>
            </form>
        </div>
    </div>
</div>
